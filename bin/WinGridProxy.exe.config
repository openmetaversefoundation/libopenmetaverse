<?xml version="1.0" encoding="utf-8" ?>
<configuration>

    <configSections>
      <section name="log4net"
             type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    </configSections>

  <log4net>
    <appender name="LogFileAppender" type="log4net.Appender.FileAppender">
      <param name="File" value="WinGridProxy.log" />
      <param name="AppendToFile" value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%t] %-5p %c %m%n" />
      </layout>
    </appender>

    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%t] %-5p %c %m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="WARN" />
        <levelMax value="FATAL" />
	<AcceptOnMatch value="TRUE" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
    </appender>

    <appender name="LandMachineLog" type="log4net.Appender.RollingFileAppender">
	<file value="AuditLog.txt" />
	<appendToFile value="true" />
	<rollingStyle value="Date" />
	<datePattern value="yyyyMMdd" />
	<maxSizeRollBackups value="10" />
	<layout type="log4net.Layout.PatternLayout">
	    <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
	</layout>
    </appender>

    <appender name="FireEventAppender" type="WinGridProxy.FireEventAppender, WinGridProxy">
	    <!--    	<filter type="log4net.Filter.LoggerMatchFilter">
        <LoggerToMatch value="OpenMetaverse" />
        <AcceptOnMatch value="true" />
</filter>-->
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="INFO" />
        <levelMax value="FATAL" />
	<AcceptOnMatch value="TRUE" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
    </appender>


    <root>
      <level value="ALL" />
      <appender-ref ref="LogFileAppender" />
      <appender-ref ref="ConsoleAppender" />
      <!-- <appender-ref ref="LandMachineLog" /> -->
      <!--      <appender-ref ref="HttpStoreLog" />-->
      <appender-ref ref="FireEventAppender" />
    </root>

    <!--
    *   ALL (Low)
    * DEBUG
    * INFO
    * WARN
    * ERROR
    * FATAL
    * OFF (High)
-->
  </log4net>


</configuration>

